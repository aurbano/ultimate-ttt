{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es5",
    "moduleResolution": "node"
  },
  "exclude": [
    "./node_modules/**/*",
    "./test/**/*"
  ]
}